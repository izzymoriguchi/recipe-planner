<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    tools:context="edu.sjsu.izzymoriguchi.myapplication.LandscapeFragment"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lst_recipes_portrait_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3">
        <ListView
            android:id="@+id/recipe_list_view_landscape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/recipe_information"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4">
        <RelativeLayout
            android:id="@+id/dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

        </RelativeLayout>
        <FrameLayout
            android:id="@+id/dish_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dish_name">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ingredients_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/dish_image"
            android:layout_below="@+id/dish_name">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/dish_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredients_names">
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>


