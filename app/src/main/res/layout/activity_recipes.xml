<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.sjsu.izzymoriguchi.myapplication.RecipesActivity" >
    <fragment
        android:name="edu.sjsu.izzymoriguchi.myapplication.PortraitFragment"
        android:id="@+id/portrait_fragment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <fragment
        android:name="edu.sjsu.izzymoriguchi.myapplication.LandscapeFragment"
        android:id="@+id/landscape_fragment"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

</android.support.constraint.ConstraintLayout>
